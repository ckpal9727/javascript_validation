<?php
	//=================================oddeven============================
	function oddeven($n)
	{
		if($n%2==0){
			return $a="number is even";
		}
		else{
			return $a="number is odd";
		}
	}
	//==================================positive===========================
	function positive($n)
	{
		if($n<0){
			return $a="number is nagetive";
		}
		else{
			return $a="number is positive";
		}
	}
	//======================================prime===========================
	function prime($n)
	{
		$counter=0;
		for($i=1;$i<=$n;$i++)
		{
			if($n%$i==0)
			{
				$counter++;
			}
			
		}
		if($counter==2)
				{
					return $a="number is prime";
				}
				else
				{
					return $a="number not is prime";
				}
	}
//======================================palimdrom===========================
	function palimdrom($n)
	{

		$rev=strrev($n);
		if($rev==$n)
		{
			return $a=("number is palimdrom");
		}
		else{
			return $a=("number is not plimdrom");
		}
	}



	if(isset($_POST['s']))
	{
		$num=$_POST['num'];
		$op=$_POST['op'];
		$Ans="";
	
		switch($op)
			{
				case 'even':
					$Ans=oddeven($num);
					break;
				case 'posi':
					$Ans=positive($num);
					break;

				case 'prime':
					$Ans=prime($num);
					break;

				case 'pali':
					$Ans=palimdrom($num);
					break;
				
			}

	
	}
	else
	{
		$num="";
		$op="";
	}





?>
