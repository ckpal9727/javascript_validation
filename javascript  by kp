<?php
$ans=null;
	function odd($n)
	{
	
		if($n%2==0)
		{
			$ans="number is even";
		}
		else
		{
			$ans="number is odd";
		}
		return $ans;
	}
	function posi($n)
	{ 
	//$ans=$_POST['ans'];
		if($n>0)
		{
			$ans="number is positive";
		}
		else
		{
			$ans="number is negative";
		}
		return $ans;
	}
	function pri($n)
	{
		for($i=2;$i<=$n;$i++)
		{
			if($n%$i==0)
			{
				$flag=1;
			}
			else
			{
				$flag=0;
			}
			if($flag==1)
			{
				$ans="number is prime";
			}
			else
			{
				$ans="number is not prime";
			}
			return $ans;
		}
	}
if(isset($_POST['s']))
	{
			$n=$_POST['n'];
			$c=$_POST['op'];
			
			switch($c)
			{
				case 'odd':
				$ans=odd($n);
				break;
				
				case 'pn':
				$ans=posi($n);
				break;
				
				case 'pri':
				$ans=pri($n);
				break;
			}
	}
?>
<form method="post">
	Enter no:<input type="text" name="n"><br>
	<input type="radio" value="odd" name="op">Odd or Even<br>
	<input type="radio" value="pn" name="op">Possitive or Negative<br>
	<input type="radio" value="pri" name="op">Prime or Composite<br>
	<input type="radio" value="pali" name="op">Palindrom or Not<br>
	<input type="submit" name="s" value="click"><br>
	Ans:<input type="text" name="ans" value="<?php echo $ans?>">
</form>
</body>
