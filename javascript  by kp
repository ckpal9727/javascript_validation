<script>
	var fname;
	var email;
	var pass;

	function validate()
	{ 
		fname=document.getElementById('fname').value;
		email=document.getElementById('email').value;
		pass=document.getElementById('password').value;
		pass2=document.getElementById('password2').value;
		
		//this is for fmane//
		if(fname.length<=0)
		{
			alert("please enter somthing");
			return false;
			
		}
		else
		{
			var regxp=/^[A-Za-z]+$/;
			if(fname.match(regxp)==null)
			{
				alert("please enter valid fname");
				return false;
			}
		}
		//this is for email
		if(email.length<=0)
		{
			alert("please enter somthing in email");
			return false
		}
		
		else
		{
			var regxp1=/[A-Za-z0-9]+@[a-z]+\.[a-z]{2,3}/;
			if(email.match(regxp1)==null)
			{
				alert("please enter valid email");
				return false
				
			}
		}
		// this is for password
		if(pass.length<=0)
		{
			alert("please enter somthing in password");
			return false
		}
		
		else
		{
			var regxp1=/[A-Za-z0-9]/;
			if(email.match(regxp1)==null)
			{
				alert("please enter valid password");
				return false
				
			}
		}	
		// this is for re-password
		if(pass2.length<=0)
		{
			alert("please enter somthing in email");
			return false
		}
		
		else
		{
			var regxp1=/[A-Za-z0-9]/;
			if(email.match(regxp1)==null)
			{
				alert("please enter valid password");
				return false
				
			}
			
		}
		if(pass==pass2)
			{
				alert("password same");
			}
		else
		
			{
				alert("password not same");

			}
		
		
		return true;
	}
	
	function submitform()
	{
	
		if(validate()){
		
		alert("form sumited");
		document.getElementById('data').innerHTML=fname;
		document.getElementById('data2').innerHTML=email;
		return false;
		}
	
		else
		{
				alert("form not sumited");
				return false;
		}
	}

		
</script>
</head>
<body>
<div class="box" >
<form onsubmit="return submitform()"  method="post" align="center">
<table align="center">
<tr>
	<td>fname</td><td><input type="text" id="fname" name="name"></td>
</tr>
