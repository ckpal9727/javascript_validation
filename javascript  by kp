	<td>hobby</td><td>codding<input type="checkbox" name="h[]">programing<input type="checkbox"></td><td>dancing<input type="checkbox" name="h[]">programing<input type="checkbox"></td>
</tr>
<tr>
	<td>email</td><td><input type="text" id="email" name="email"></td>
</tr>
