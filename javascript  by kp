	<?php
	
		if(isset($_GET['submit']))
		{
			$number1=$_GET['num1'];
			$number2=$_GET['num2'];
			echo $number1;
			echo "<br>";
			echo $number2;
			echo "<br>";
			$swap=$number1;
			$number1=$number2;
			$number2=$swap;
			echo $number1;
			echo "<br>";
			echo $number2;
		}
				
	?>

