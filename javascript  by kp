---------------------------delete---------------------



include('connection.php');


error_reporting(0);
$id=$_GET['id'];


	$sql = "delete from user_master where id='$id'";
 
	$result = mysqli_query($con, $sql);

	if($result){

		header('Location:insert.php');
	}else{
		echo "<br>not delete";
	}

?>
