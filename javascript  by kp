--------------------------------------settype and gettype -----------------------

<html>
	<head>
		<title>settype</title>
	</head>
	<body>
		<form action="" method="post">
			name:<input type="text" name="fname">
			
			lname:<input type="text" name="lname">
			age:<input type="text" name="age">
		<input type="submit" value="submit" name="submit">
		</form>
	</body>
	<?php
	
		if(isset($_POST['submit']))
		{
			$fname=$_POST['fname'];
			$lname=$_POST['lname'];
			$age=$_POST['age'];
			
			settype($age,"integer");
			
			
			echo var_dump($age);
			echo var_dump($fname);
			echo gettype($fname);
			echo gettype($lname);
			echo gettype($age);
		}
	?>

</html>
