	--------------------update-------------------------
	
	<?php

include('connection.php');

$id=$_GET['id'];
echo $id;

//getting data
$select="select name,email from user_master where id='$id'";
$res=mysqli_query($con,$select);
while($row=mysqli_fetch_array($res))
{
    $name=$row['name'];
    $email=$row['email'];
}
if(isset($_POST['s']))
{
    
    $ename=$_POST['u'];
    $eemail=$_POST['e'];
    $update="update user_master set name='$ename' , email='$eemail' where id='$id'";
    $result2=mysqli_query($con,$update);
    if($result2 ){

					header('Location:insert.php');
				}
				else{

					echo "not Updtae";
				}
    
}



?>
